<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>

<HBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/"
      fx:controller="ch.picturex.controller.TopToolBarController">
   <Pane minWidth="4"/>
   <Button fx:id="zoomResetButton" mnemonicParsing="false">
      <graphic>
         <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@../icons/zoom_reset.png"/>
         </ImageView>
      </graphic>
   </Button>
   <Pane minWidth="4"/>
   <Button fx:id="zoomInButton" mnemonicParsing="false">
      <graphic>
         <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@../icons/zoom_in.png"/>
         </ImageView>
      </graphic>
   </Button>
   <Pane minWidth="10"/>
   <Button fx:id="zoomOutButton" mnemonicParsing="false">
      <graphic>
         <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@../icons/zoom_out.png"/>
         </ImageView>
      </graphic>
   </Button>
   <Pane minWidth="10"/>
   <Button fx:id="blackAndWhiteButton" mnemonicParsing="false">
      <graphic>
         <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@../icons/black_and_white.png"/>
         </ImageView>
      </graphic>
   </Button>
   <Pane minWidth="10"/>
   <Button fx:id="rotateLeftButton" mnemonicParsing="false">
      <graphic>
         <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@../icons/rotate_left.png"/>
         </ImageView>
      </graphic>
   </Button>
   <Pane minWidth="10"/>
   <Button fx:id="rotateRightButton" mnemonicParsing="false">
      <graphic>
         <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@../icons/rotate_right.png"/>
         </ImageView>
      </graphic>
   </Button>
   <Pane minWidth="10"/>
   <Button fx:id="resizeButton" mnemonicParsing="false">
      <graphic>
         <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@../icons/resize.png"/>
         </ImageView>
      </graphic>
   </Button>
   <Pane minWidth="10"/>
   <Button fx:id="undoButton" mnemonicParsing="false">
      <graphic>
         <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@../icons/undo_18dp.png"/>
         </ImageView>
      </graphic>
   </Button>
   <Pane minWidth="4"/>
</HBox>
